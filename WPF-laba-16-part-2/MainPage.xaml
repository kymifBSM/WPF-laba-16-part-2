<Page x:Class="WPF_laba_16_part_2.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_laba_16_part_2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
      <Grid>
        <StackPanel>
            <TextBlock Text="Код товара:" Style="{StaticResource textblockStyle}" Margin="5,60,5,0"/>
            <TextBox x:Name="ProductCodeTextBox" Style="{StaticResource textboxStyle}"/>
            <TextBlock Text="Количество:" Style="{StaticResource textblockStyle}" Margin="5,5,5,0"/>
            <TextBox x:Name="QuantityTextBox" Style="{StaticResource textboxStyle}"/>
            <Button Content="Добавить в корзину" Click="AddToCartButton_Click" Style="{StaticResource buttonStyle}" Margin="5,125,5,5"/>
            <Button Content="Показать корзину" Click="ShowCartButton_Click" Style="{StaticResource buttonStyle}"/>
        </StackPanel>
     </Grid>
</Page>
